---
import { Icon } from 'astro-icon/components'
---

<!-- CTA -->
<footer
    class="w-full bg-gradient-to-br from-slate-200 to-gray-50 py-8"
    id="cta">
    <section class="container mx-auto">
        <div class="grid grid-cols-1 gap-4">
            <div
                class="w-full md:col-span-4 p-6 text-center flex flex-col justify-center items-center gap-0">
                <h1
                    class="text-2xl md:text-3xl lg:text-4xl tracking-tight font-bold text-stone-700">
                    Get in touch
                </h1>
                <p class="text-sm text-indigo-800 tracking-tight mb-6">
                    Let's discuss your future projects together
                </p>
                <div class="inline-flex items-center gap-4">
                    <a
                        class="btn"
                        href="mailto:me@vannrith.com"
                        target="_blank">
                        <p class="btn-inner">
                            <Icon
                                name="uim:comment-alt-dots"
                                class="text-2xl lg:text-xl"
                            />
                            Email
                        </p>
                    </a>
                    <a
                        class="btn-icon"
                        href="//linkedin.com/in/madsouris"
                        rel="nofollow"
                        target="_blank">
                        <Icon
                            name="uim:linkedin"
                            class="text-2xl lg:text-xll"
                        />
                    </a>
                    <a
                        class="btn-icon"
                        href="//dribbble.com/madsouris"
                        rel="nofollow"
                        target="_blank">
                        <Icon name="uim:dribbble" class="text-2xl lg:text-xl" />
                    </a>
                    <a
                        class="btn-icon"
                        href="//instagram.com/madsouris"
                        rel="nofollow"
                        target="_blank">
                        <Icon
                            name="uim:instagram"
                            class="text-2xl lg:text-xl"
                        />
                    </a>
                </div>
            </div>
        </div>
    </section>
</footer>

<section class="container mx-auto lg:w-2/3 p-4 my-8 text-center">
    <p class="card-subtitle">&copy; 2024 - Present, All rights reserved</p>
</section>
